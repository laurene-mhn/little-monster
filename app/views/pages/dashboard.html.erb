<div class="container wrap-container mt-3 mb-3">
  <h3><strong>Your current bookings</strong></h3>
  <hr>
  <%= link_to "< Back", animals_path, class: 'btn' %>
  <hr>
  <div class="booking-card">
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-6">
          <div class="booking-card-elements">
            <div class="booking-photo">
              <% if booking.animal.photos.attached? %>
                <%= cl_image_tag(booking.animal.photos[0].key, radius: 7, height: 250, width: 350, crop: :fill) %>
              <% else %>
                <%= image_tag "monster.png" %>
              <% end %>
            </div>
            <div class="booking-infos">
              <div class="booking-info">
                <p>Monster's name:</p>
                <strong><%= booking.animal.name %></strong>
              </div>
              <div class="booking-info">
                <p>From</p>
                <strong><%= booking.start_date %></strong>
              </div>
              <div class="booking-info">
                <p>To</p>
                <strong><%= booking.end_date %></strong>
              </div>
              <div class="booking-info">
                <p>Owner is</p>
                <strong>To be defined</strong>
              </div>
              <div class="booking-info">
                <p>Price: <strong><%= booking.total_price %></strong></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
