<%= simple_form_for @animal do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, collection: Animal::CATEGORIES %>
  <%= f.input :size, collection: Animal::SIZES %>
  <%= f.input :power, collection: Animal::POWERS %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

