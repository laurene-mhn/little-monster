<div class="container">
  <h1>All animals</h1>
  <div class="row">
    <% @animals.each do |animal| %>
        <div class="col-4">
          <div class="card-trip">
            <img src="https://images.unsplash.com/photo-1599511872836-e71161a5d5c1?ixlib=rb-1.2.1&auto=format&fit=crop&w=667&q=80" />
            <div class="card-trip-infos">
              <div>
                <h2><%= animal.name %></h2>
                <p><%= animal.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= animal.price %>$</h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="btn-flat-yellow">
  <%= link_to "Add my animal", new_animal_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>

