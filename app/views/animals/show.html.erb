<div class="container wrap-container mt-4 mb-4">
  <h3><strong><%= @animal.name.capitalize %></strong> - <%= @animal.category.capitalize %> category</h3>
  <hr>
  <%= link_to "< Back", animals_path, class: 'btn' %>
  <% if policy(@animal).edit? %>|
    <%= link_to "Update", edit_animal_path, class: 'btn' %>
    <% end %>
  <% if policy(@animal).destroy? %>|
    <%= link_to "Delete", animal_path(@animal), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn' %>
    <% end %>
  <hr>
  <div class="animal-infos">

    <div class="animal-photos">
      <% @animal.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 300, crop: :fill, gravity: :auto, radius: 1 %>
      <% end %>
    </div>
    <div class="card ml-3">
      <div class="card-body">

      <h4 class="card-title" style="text-align: center"><strong><%= @animal.price %> $</strong> </h4>
      <hr>
      <p class="card-text"><strong>✍🏼Description :</strong> <%= @animal.description.capitalize %></p>

      <p class="card-text"><strong>💪🏼Power :</strong> <%= @animal.power.capitalize %></p>
      <hr>
      <p class="card-text" style="text-align: center"><small class="text-muted">Address :</strong> <%= @animal.address %></small></p>

    </div>
  </div>
      <div class="booking">
        <%= link_to "Book now", new_animal_booking_path(@animal), class: 'btn btn-flat-yellow' %>
      </div>

  </div>
</div>

